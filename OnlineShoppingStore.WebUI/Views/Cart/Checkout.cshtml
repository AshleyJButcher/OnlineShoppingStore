@model OnlineShoppingStore.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Online Shopping Store: Checkout";
}

<h2>Check Out Now</h2>
<p> Please enter your shipping details</p>
@Html.ValidationSummary()
@using (Html.BeginForm())
{
    <h3>Ship To </h3>
    <div class="form-group">
        <label> Name</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
    </div>

    <h3>Address</h3>

    foreach (var property in ViewData.ModelMetadata.Properties)
    {
        if (property.PropertyName != " Name" && property.PropertyName != "GiftWrapped")
        {
            <div class="form-group">
                <label>@(property.DisplayName ?? property.PropertyName)</label>
                @Html.TextBox(property.PropertyName, null, new { @class = "form-control" })
            </div>
        }
    }

    <h3> Options</h3>
    <div class="checkbox">
        <label> GIftwrapped?</label>
        @Html.EditorFor(x => x.GiftWrapped)
        Gift Wrap
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Complete" />
    </div>
}


